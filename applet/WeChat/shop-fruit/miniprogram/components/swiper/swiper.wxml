<!-- components/swiper/swiper.wxml -->
<view class='swiperContainer'>
  <swiper class="swiper_box" autoplay="true" indicator-dots="true" interval="5000" circular="true">
    <block wx:for="{{imgUrls}}" wx:key="id">
      <swiper-item>
        <image src="{{item}}" class="slide-image" width="750rpx" height="500rpx" mode='aspectFill' />
      </swiper-item>
    </block>
  </swiper>
</view>